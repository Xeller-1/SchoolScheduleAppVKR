<Window x:Class="SchoolScheduleApp.EditRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать кабинет" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Название кабинета:"/>
            <TextBox Name="NameTextBox" Margin="0,5,0,10"/>

            <Label Content="Вместимость:"/>
            <TextBox Name="CapacityTextBox" Margin="0,5,0,10"/>

           

            <Button Content="Сохранить" Width="100" HorizontalAlignment="Right" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>