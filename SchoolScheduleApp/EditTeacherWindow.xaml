<Window x:Class="SchoolScheduleApp.EditTeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать преподавателя" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="ФИО преподавателя:"/>
            <TextBox Name="NameTextBox" Margin="0,5,0,10"/>

            <Label Content="Предметы:"/>
            <ListBox Name="SubjectsListBox" SelectionMode="Multiple" Height="200"
                     DisplayMemberPath="Name"/>

            <Button Content="Сохранить" HorizontalAlignment="Right" 
                    Width="100" Margin="0,10,0,0" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>