<Window x:Class="SchoolScheduleApp.EditCallsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать звонок" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Начало звонка:"/>
            <TextBox Name="StartTimeTextBox" Margin="0,5,0,10"/>

            <Label Content="Конец звонка:"/>
            <TextBox Name="EndTimeTextBox" Margin="0,5,0,10"/>

            <Label Content="День недели:"/>
            <ComboBox Name="DayOfWeekComboBox" Margin="0,5,0,10">
                <ComboBoxItem Content="Понедельник"/>
                <ComboBoxItem Content="Вторник"/>
                <ComboBoxItem Content="Среда"/>
                <ComboBoxItem Content="Четверг"/>
                <ComboBoxItem Content="Пятница"/>
            </ComboBox>

            <Button Content="Сохранить" Width="100" HorizontalAlignment="Right" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>