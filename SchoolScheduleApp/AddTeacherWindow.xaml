<Window x:Class="SchoolScheduleApp.AddTeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить преподавателя" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="ФИО преподавателя:"/>
            <TextBox Name="FullNameTextBox" Margin="0,5,0,10"/>

            <Label Content="Предмет:"/>
            <ComboBox Name="SubjectComboBox" Margin="0,5,0,10" DisplayMemberPath="Name"/>

            
            <Button Content="Добавить" Width="100" HorizontalAlignment="Right" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
