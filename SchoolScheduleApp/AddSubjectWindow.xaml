<Window x:Class="SchoolScheduleApp.AddSubjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить предмет" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Класс:"/>
            <ComboBox Name="GroupComboBox" DisplayMemberPath="Name" Margin="0,5,0,10"/>

            <Label Content="Название предмета:"/>
            <TextBox Name="NameTextBox" Margin="0,5,0,10"/>

            <Label Content="Сложность (1-15):"/>
            <TextBox Name="ComplexityTextBox" Margin="0,5,0,10"/>

            <Label Content="Часы:"/>
            <TextBox Name="HoursTextBox" Margin="0,5,0,10"/>

            <Button Content="Добавить" Width="100" HorizontalAlignment="Right" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>