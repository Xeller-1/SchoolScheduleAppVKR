<Window x:Class="SchoolScheduleApp.AddGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить группу" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Название группы:"/>
            <TextBox Name="NameTextBox" Margin="0,5,0,10"/>

            

            <Button Content="Добавить" Width="100" HorizontalAlignment="Right" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>